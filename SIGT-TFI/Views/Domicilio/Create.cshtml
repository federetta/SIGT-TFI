@model Entities.Domicilio

@{
    ViewBag.Title = "Create";
    var id = Url.RequestContext.RouteData.Values["id"];

}
@{ var listadolocalidad = new List<SelectListItem>();
    foreach (var std in ViewData["Localidad"] as IList<Entities.Localidad>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Nombre,
            Value = std.Id.ToString()
        };
        listadolocalidad.Add(elemento);
    }
}
@{ var listadoprovincia = new List<SelectListItem>();
    foreach (var std in ViewData["Provincia"] as IList<Entities.Provincia>)
    {
        var elemento = new SelectListItem()
        {
            Text = std.Nombre,
            Value = std.Id.ToString()
        };
        listadoprovincia.Add(elemento);
    }
}





