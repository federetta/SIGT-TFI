@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
    @Html.AntiForgeryToken()

    <ul class="nav navbar-nav navbar-right">
        <li>
            @Html.ActionLink(SIGT_TFI.Resources.HomeTexts.Hola + User.Identity.GetUserName() + "!", "Index", "Manage", routeValues: null, htmlAttributes: new { title = "Manage" })
        </li>
        <li><a href="javascript:document.getElementById('logoutForm').submit()">Cerrar sesión</a></li>
    </ul>
    }
}
else
{
    <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">@SIGT_TFI.Resources.HomeTexts.Language<span class="caret"></span></a>
                        <ul class="dropdown-menu">
                            <li>@Html.ActionLink("Español", "Change", "Language", new { LanguageAbbrevation = "en" }, null)</li>
                            <li>@Html.ActionLink("Ingles", "Change", "Language", new { LanguageAbbrevation = "fr" }, null)</li>
                        </ul>
                    </li>
        <li>@Html.ActionLink(@SIGT_TFI.Resources.HomeTexts.Registrar, "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink(@SIGT_TFI.Resources.HomeTexts.IniciarSesion, "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
