@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.NumeroFactura)
        </td>
       
        <td>
            @Html.DisplayFor(modelItem => item.Tipo)
        </td>
      
        <td>
            @Html.DisplayFor(modelItem => item.Letra)
        </td>
