@model IEnumerable<Entities.Factura>

@{
    ViewBag.Title = "PDF";
}

<h2>PDF</h2>


<p>
    @Html.DisplayNameFor(model => model.NumeroFactura)
</p>
<p>
    @Html.DisplayNameFor(model => model.Tipo)
</p>
<p>
    @Html.DisplayNameFor(model => model.Letra)
</p>
<table class="table">
