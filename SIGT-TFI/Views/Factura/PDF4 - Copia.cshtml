                            </td>
                        </tr>
                        <tr>
                            <td style="padding-right: 50px !important;">
                                IVA Cliente:
                            </td>
                            <td>@Html.DisplayFor(model => model.Iva)</td>

                        </tr>
                    }
               
                <tr>
                    <td style="padding-right: 50px !important;">
                        Total:
                    </td>
                    <td>@Html.DisplayFor(model => model.Total)</td>
                </tr>
            </table>
            <br />
            <br />
            <br />
